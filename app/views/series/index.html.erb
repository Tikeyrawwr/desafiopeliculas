<div class="container">
  <h1>Series</h1>
  
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Sinopsis</th>
        <th>Director</th>
      </tr>
    </thead>
    <tbody>
      <% @series.each do |serie| %>
        <tr>
          <td><%= serie.name %></td>
          <td><%= serie.synopsis %></td>
          <td><%= serie.director %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <%= link_to 'Nueva Serie', new_serie_path, class: 'btn btn-primary' %>
</div>
